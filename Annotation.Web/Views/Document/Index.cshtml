@{
    ViewBag.Title = "Index";
}

<style>
    #rootNavigationBar {
        visibility:hidden;
    }
    a:hover
    {
      text-decoration:none;
      color:white;
    }
</style>

<div ng-controller="documentCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top navigationBar"
         >
         @*style="background-color:#3097d1;left:0;text-decoration:none;border:none;width:100%;height:58px;position:absolute;top:0;box-shadow: 0 0 16px #888888;text-align:center"*@
        <div class="container">
            <a class="navLink" href="~/">Home</a>
            <button class="btn btn-default" type="submit" style="float:left;margin-left:10px;margin-top:13px" data-toggle="modal" data-target="#newAnnotationModal" title="Add new annotation"><span class="glyphicon glyphicon-plus"></span></button>
            <a class="navLink" style="float:right" href="~/">Amichai</a>
            <div style="float:right">
                <a><img src="~/Content/Assets/column3.png" width="25" class="setColumnStyle" /></a>
                <a><img src="~/Content/Assets/text22.png" width="25" class="setColumnStyle" /></a>
            </div>
            <input type="text" class="form-control" data-action="grow" placeholder="Search" style="margin-top:12px;margin-right:12px;float:right">
        </div>
    </div>
    <div class="row">
        <div class="col-md-3" style="overflow-y:scroll;left:0;width:30%;height:{{pageHeight}}px;position:absolute;top:60px;" id="annotationPane">
            <div ng-repeat="ann in annotations"
                 ng-mouseenter="hover(ann, $index, true)"
                 ng-mouseleave="hover(ann, $index, false)"
                 ng-click="expandAnnotation(ann, $index)"
                 id="annotation_{{$index}}">
                <div ng-hide="ann.isExpanded">
                    <span ng-repeat="unit in ann.AnnotationPreviewUnits.Tokens"
                          ng-class="{linkedText: unit.Type == 'LinkedText'}">
                        {{unit.Val}}</span><span ng-show="ann.IsPreviewCutoff">...</span>
                </div>
                <div ng-show="ann.isExpanded" style="font-size:17px">
                    <span ng-repeat="unit in ann.AnnotationBodyUnits.Tokens"
                          ng-class="{linkedText: unit.Type == 'LinkedText'}">{{unit.Val}}</span>
                </div>
                <hr />
            </div>
        </div>
        <div class="col-md-9" style="overflow-y:scroll;left:30%;width:70%;height:{{pageHeight}}px;position:absolute;top:60px;">
            <div id="documentTitle">{{document.Title}}</div>
            <br />
            <div id="textBody">
                <span ng-repeat="token in document.Tokens" id="token_{{$index}}"
                      style="display:inline;"
                      ng-click="clickToken(token)"
                      ng-mouseenter="hoverToken(token, $index, true)"
                      ng-mouseleave="hoverToken(token, $index, false)">{{token.AsString}}<br ng-show="token.IsLineBreak"/></span>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="newAnnotationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add New Annotation</h4>
                </div>
                <div class="modal-body">
                    <textarea id="newAnnotationTextArea" ng-model="newAnnotationText"></textarea>
                </div>
                <div class="modal-footer" style="margin-top:0">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" ng-click="saveAnnotation()">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var documentId = '@Model';
    </script>
    <script src="~/Scripts/Controllers/DocumentController.js"></script>
}